{
  "header": "Exemplo 01 header",
  "footer": "Exemplo 01 footer",
  "cards": [
    {
      "order": 0,
      "title": "Teste de Card de Texto",
      "baseSize": "200px",
      "footer": "Prodam",
      "input": [],
      "ingestion": {
        "endpoint": {
          "urlTemplate": "./data/card-text-01.json",
          "method": "GET",
          "bodyType": "json"
        }
      },
      "visualization": {
        "type": "text",
        "text": {
          "template": "O nome é ${result.nome}!"
        }
      }
    },
    {
      "order": 1,
      "title": "Teste de Card de Setores",
      "baseSize": "200px",
      "footer": "Dados de teste",
      "input": [],
      "ingestion": {
        "endpoint": {
          "urlTemplate": "./data/card-pie-01.json",
          "method": "GET",
          "bodyType": "none"
        }
      },
      "visualization": {
        "type": "pie",
        "pie": {
          "objectArray": "result.registros",
          "labelProperty": "subprefeitura",
          "valueProperty": "quantidade"
        }
      }
    },
    {
      "order": 2,
      "title": "Seguidores",
      "baseSize": "200px",
      "footer": "from GitHub API",
      "input": [
        {
          "name": "username",
          "type": "text",
          "label": "Nome de usuário",
          "value": "torvalds"
        }
      ],
      "ingestion": {
        "endpoint": {
          "urlTemplate": "https://api.github.com/users/${username}",
          "method": "GET",
          "bodyType": "none"
        }
      },
      "visualization": {
        "type": "text",
        "text": {
          "template": "De ${name}: ${followers}!"
        }
      }
    },
    {
      "order": 3,
      "title": "Lançamentos do Metallica, por data",
      "baseSize": "400px",
      "footer": "from MusicBrainz API",
      "input": [
        {
          "name": "artistId",
          "type": "text",
          "label": "ID do artista",
          "value": "65f4f0c5-ef9e-490c-aee3-909e7ae6b2ab"
        }
      ],
      "ingestion": {
        "endpoint": {
          "urlTemplate": "https://musicbrainz.org/ws/2/release-group?fmt=json&artist=${artistId}",
          "method": "GET",
          "bodyType": "none"
        }
      },
      "visualization": {
        "type": "pie",
        "pie": {
          "objectArray": "release-groups",
          "labelProperty": "first-release-date"
        }
      }
    },
    {
      "order": 4,
      "title": "Artistas contendo a palavra 'the', por país",
      "baseSize": "500px",
      "footer": "from MusicBrainz API",
      "input": [
        {
          "name": "palavra",
          "type": "text",
          "label": "Palavra a buscar",
          "value": "the"
        }
      ],
      "ingestion": {
        "endpoint": {
          "urlTemplate": "https://musicbrainz.org/ws/2/artist?fmt=json&query=${palavra}",
          "method": "GET",
          "bodyType": "none"
        }
      },
      "visualization": {
        "type": "pie",
        "pie": {
          "objectArray": "artists",
          "labelProperty": "country"
        }
      }
    },
    {
      "order": 5,
      "title": "Dados sobre o Brasil",
      "baseSize": "300px",
      "footer": "from GraphQL Countries List",
      "input": [],
      "ingestion": {
        "endpoint": {
          "urlTemplate": "https://countries.trevorblades.com/",
          "method": "POST",
          "bodyType": "graphql",
          "bodyTemplate": "{\r\ncountry(code:\"BR\"){\r\nname\r\nnative\r\ncapital\r\ncurrency\r\nlanguages{\r\ncode\r\nname\r\n}\r\n}\r\n}"
        }
      },
      "visualization": {
        "type": "text",
        "text": {
          "template": "A capital do ${data.country.name} é ${data.country.capital}"
        }
      }
    },
    {
      "order": 6,
      "title": "Dados sobre um país",
      "baseSize": "300px",
      "footer": "from GraphQL Countries Lists",
      "input": [
        {
          "type": "text",
          "label": "País",
          "name": "codigoDoPais",
          "value": "US"
        }
      ],
      "ingestion": {
        "endpoint": {
          "urlTemplate": "https://countries.trevorblades.com/",
          "method": "POST",
          "bodyType": "graphql",
          "bodyTemplate": "query minhaQuery($codigoDoPais: ID!){\r\n  country(code: $codigoDoPais){\r\n    name\r\n    native\r\n    capital\r\n    currency\r\n    languages{\r\n      code\r\n      name\r\n    }\r\n  }\r\n}"
        }
      },
      "visualization": {
        "type": "text",
        "text": {
          "template": "País: ${data.country.name}<br>Capital: ${data.country.capital}<br>Língua principal: ${data.country.languages[0].name}"
        }
      }
    }
  ]
}
