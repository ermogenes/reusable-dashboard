{
    "header": "Dashboard de exemplo 01 header",
    "footer": "Dashboard de exemplo 01 footer",
    "cards": [
        {
            "order": 0,
            "title": "Teste de Card de Texto",
            "baseSize": "200px",
            "footer": "Prodam",
            "input": {},
            "ingestion": {
                "endpoint": {
                    "urlTemplate": "./data/card-text-01.json",
                    "verb": "GET",
                    "bodyType": "json",
                    "bodyTemplate__": "{\"teste\": \"teste\"}"
                }
            },
            "visualization": {
                "type": "text",
                "text": {
                    "property__": "result.nome",
                    "template": "O nome é ${result.nome}!"
                }
            }
        },
        {
            "order": 1,
            "title": "Teste de Card de Setores",
            "baseSize": "200px",
            "footer": "Dados de teste",
            "input": {},
            "ingestion": {
                "endpoint": {
                    "urlTemplate": "./data/card-pie-01.json",
                    "verb": "GET",
                    "bodyType": "none"
                }
            },
            "visualization": {
                "type": "pie",
                "pie": {
                    "objectArray": "result.registros",
                    "labelProperty": "subprefeitura",
                    "valueProperty": "quantidade"
                }
            }
        },
        {
            "order": 2,
            "title": "Seguidores",
            "baseSize": "200px",
            "footer": "from GitHub API",
            "input": {},
            "ingestion": {
                "endpoint": {
                    "urlTemplate": "https://api.github.com/users/ermogenes",
                    "verb": "GET",
                    "bodyType": "none"
                }
            },
            "visualization": {
                "type": "text",
                "text": {
                    "property___": "followers",
                    "template": "De ${name}: ${followers}!"
                }
            }
        },
        {
            "order": 3,
            "title": "Lançamentos do Metallica, por data",
            "baseSize": "400px",
            "footer": "from MusicBrainz API",
            "input": {},
            "ingestion": {
                "endpoint": {
                    "urlTemplate": "https://musicbrainz.org/ws/2/release-group?fmt=json&artist=65f4f0c5-ef9e-490c-aee3-909e7ae6b2ab",
                    "verb": "GET",
                    "bodyType": "none"
                }
            },
            "visualization": {
                "type": "pie",
                "pie": {
                    "objectArray": "release-groups",
                    "labelProperty": "first-release-date"
                }
            }
        },
        {
            "order": 4,
            "title": "Artistas contendo a palavra 'the', por país",
            "baseSize": "500px",
            "footer": "from MusicBrainz API",
            "input": {},
            "ingestion": {
                "endpoint": {
                    "urlTemplate": "https://musicbrainz.org/ws/2/artist?fmt=json&query=the",
                    "verb": "GET",
                    "bodyType": "none"
                }
            },
            "visualization": {
                "type": "pie",
                "pie": {
                    "objectArray": "artists",
                    "labelProperty": "country"
                }
            }
        },
        {
            "order": 5,
            "title": "Dados sobre o Brasil",
            "baseSize": "300px",
            "footer": "from GraphQL Countries List",
            "input": {},
            "ingestion": {
                "endpoint": {
                    "urlTemplate": "https://countries.trevorblades.com/",
                    "verb": "POST",
                    "bodyType": "graphql",
                    "bodyTemplate": "{\r\ncountry(code:\"BR\"){\r\nname\r\nnative\r\ncapital\r\ncurrency\r\nlanguages{\r\ncode\r\nname\r\n}\r\n}\r\n}"
                }
            },
            "visualization": {
                "type": "text",
                "text": {
                    "template": "A capital do ${data.country.name} é ${data.country.capital}"
                }
            }
        }
    ]
}